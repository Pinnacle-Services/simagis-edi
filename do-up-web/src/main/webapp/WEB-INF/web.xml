<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <security-constraint>
        <display-name>UpdatePayPredict API Security Constraint</display-name>
        <web-resource-collection>
            <web-resource-name>UpdatePayPredict API Protected Area</web-resource-name>
            <url-pattern>/api/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>pp-api-admins</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>BASIC</auth-method>
        <realm-name>UpdatePayPredict API Authentication Area</realm-name>
    </login-config>
    <security-role>
        <role-name>pp-api-admins</role-name>
    </security-role>
</web-app>
